<Window x:Class="_41PP_TRifonova.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_41PP_TRifonova"
        mc:Ignorable="d" Icon="./image/logo.png" WindowStartupLocation="CenterScreen"
        Title="Библиотека" Height="300" Width="450" MaxHeight="300" MaxWidth="450">
    <Grid Style="{StaticResource MainThemeGrid}">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Height="100" Margin="0,10,0,0" Source="./image/MainThemeImage.png"></Image>
            <TextBlock Style="{StaticResource TitlyText}">Вход</TextBlock>
            <Button Name="btSotrudnik" Template="{StaticResource MainThemeButton}" Click="btSotrudnik_Click">Войти как сотрудник</Button>
            <Button Name="btPolzpvatel" Template="{StaticResource MainThemeButton}" Click="btPolzpvatel_Click">Войти как пользователь</Button>
        </StackPanel>
    </Grid>
</Window>
