<Window x:Class="_41PP_TRifonova.WindowAvtorizatsiaReaders"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_41PP_TRifonova"
        mc:Ignorable="d" Icon="../image/logo.png"
        Title="Авторизация читателя" Height="300" Width="450" MaxHeight="300" MaxWidth="450">
    <Grid Style="{StaticResource MainThemeGrid}">
        <StackPanel  Margin="20,0,20,0">
            <Image Height="130" Source="../image/MainThemeImage.png" Margin="0,10,0,10"></Image>
            <TextBox Name="readersAvtorizatsia" Style="{StaticResource MainThemeTextBox}" Tag="Введите номер читательского билета" Height="30" Cursor="IBeam"></TextBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="back" Click="back_Click" Template="{StaticResource MainThemeButton}" >Назад</Button>
                <Button Name="vhod" Click="vhod_Click" Template="{StaticResource MainThemeButton}" HorizontalAlignment="Center" Margin="10,0,0,0">Вход</Button>
            </StackPanel>
           
        </StackPanel>
    </Grid>
</Window>
