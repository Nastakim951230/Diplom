<Window x:Class="_41PP_TRifonova.WindowDate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_41PP_TRifonova"
        mc:Ignorable="d" Icon="../image/logo.png" WindowStartupLocation="CenterScreen"
        Title="Дата возврата" Height="150" Width="250" MaxHeight="150" MaxWidth="250">
    <Grid Style="{ StaticResource MainThemeGrid}">
        <StackPanel Margin="10">
            <TextBlock Style="{StaticResource textListNazvanie}" Foreground="White">Дата возврата</TextBlock>
            <DatePicker Name="date" Style="{StaticResource MainThemeDatePicker}"></DatePicker>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="save" Click="save_Click" Margin="10,0,0,0" Template="{StaticResource MainThemeButton}">Сохранить</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
